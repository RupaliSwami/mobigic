<!doctype html>
	<html>

	<head>
		<title>Login and Registration Form</title>
		
	</head>

	<style>

	  .toggle-btn{
           padding: 20px 50px;
           cursor: pointer;
           background: transparent;
           border: 0;
           outline: none;
	  }

	  .btn{
	  	top: 0;
	  	left: 0;
	  	position: absolute;
	  	width: 110px;
	  	height: 100%;
	  	background: linear-gradient(to right);
	  	border-radius: 30px;
	  	transition: 5s;
	  }


	  .input-group{
	  	top: 180px;
	  	position: absolute;
	  	width: 280px;
	  	transition: .5s;
	  }

	  .input-feild{
	  	width: 100%;
	  	padding: 10px 0;
	  	margin: 5px 0;
	  	border-left: 0;
	  	border-right: 0;
	  	border-top: 0;
	  	border-bottom: 1px solid;

	  }

	  .submit-btn{
	  	width: 85%;
	  	padding: 10px 30px;
	  	position: pointer;
	  	display: block;
	  	margin: auto;
	  	background: linear-gradient(to right);
	  	border: 0;
	  	outline: none;
	  	border-radius: 30px;
	  	cursor: pointer;
	  }

	  #login{
	  	left: 50px;
	  }

	  #register{
	  	left: 450px;
	  }

	  .form-box{
	  	width: 380px;
	  	height: 480px;

	  	position: relative;
	  	margin: 6% auto
	  	padding: 5px;
	  	overflow: hidden;
	  }


    </style>
     <body>

     	<div class="form">
     		
     		<div class="form-box">
     			<div class="button-box">
     				<div id="btn">
     				<button type="button" class="toggle-btn" onclick="login()">LogIn</button>
     				<button type="button" class="toggle-btn" onclick="register()">SignIn</button>
     			   </div>
     			</div>

     			<form action="/login" method="post" id="login" class="input-group">
                     <input type="text" name="email" class="input-feild" placeholder="Email" required>
                     <input type="password" name="password" class="input-feild" placeholder="Enter Password" required>
                     <button type="submit" class="submit-btn">Login</button>
     			</form>

     			<form action="/signin" method="post" id="register" class="input-group">
                     <input type="text" name="userid" class="input-feild" placeholder="User Id" required>
                     <input type="email" name="email" class="input-feild" placeholder="Email" required>
                     <input type="password" name="password" class="input-feild" placeholder="Enter Password" required>
                     <input type="password" class="input-feild" placeholder="Confirm Password" required>
                     <button class="alert alert-success" type="submit" class="submit-btn">Register</button>
     			</form>

     		</div>
     	</div>

     </body>

     <script>

     	  var x= document.getElementById("login");
     	  var y = document.getElementById('register');
     	  var z= document.getElementById('btn');

     	 
     	  function register(){
     	  	x.style.left= "-400px";
     	  	y.style.left= "50px";
     	  	z.style.left= "110px";

     	  }

     	   function login(){
     	  	x.style.left= "50px";
     	  	y.style.left= "450px";
     	  	z.style.left= "0px";

     	  }


     	  

     </script>

	</html>

